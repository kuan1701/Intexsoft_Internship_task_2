<!DOCTYPE html>
<html>

<head>
    <title>Books</title>
    <meta charset="utf-8" />
    <style>
        .field {
            width: 180px;
        }
    </style>
</head>

<body>
    <h1>List of books</h1>

    <div class="main_table_container" style="display: flex; justify-content: space-between">
        <div class="localize_table">
            <p>
                <a href="/create">Add book</a>
            </p>
            <p>
                <a href="/createLocalizedTitle">Add localized title</a>
            </p>
            <div>
                <table>
                    <tbody>
                        <tr>
                            <th>Book Title</th>
                            <th>Localized book title</th>
                            <th>Language</th>
                            <th>Pages</th>
                            <th>Actions</th>
                        </tr>
                        {{#each localeBookList}}
                        <tr>
                            <td style="padding:0 10px 0 10px;">{{book_name}}</td>
                            <td style="padding:0 10px 0 10px;">{{locale_book_name}}</td>
                            <td style="padding:0 10px 0 10px;">
                                {{language_name}}
                            </td>
                            <td style="padding:0 10px 0 10px;">{{book_length}}</td>
                            <td>
                                <a href="/edit/{{book_id}}" style="text-decoration: none;">Edit | </a>
                                <form action="delete/{{book_id}}" method="POST" style="display:inline;">
                                    <input type="submit" value="Delete" />
                                </form>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <br>
    <div>
        <a href="/bookList">List of books</a>
    </div>
    <div>
        <p>Sort by languge:</p>
        <form action="/" method="POST" style="display:inline;">
            <input type="hidden" value="1">
            <input type="submit" value="PL" />
        </form>

        <form action="/" method="POST" style="display:inline;">
            <input type="hidden" value="2">
            <input type="submit" value="RU" />
        </form>

        <form action="/" method="POST" style="display:inline;">
            <input type="hidden" value="3">
            <input type="submit" value="BY" />
        </form>
    </div>
</body>
<html>